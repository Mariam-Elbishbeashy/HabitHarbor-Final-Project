<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Signup form</title>
    <link rel="stylesheet" href="css/signup.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
</head>
<body>

    <div class="container">
        <header>Signup Form</header>
        <div class="progress-bar">
            <div class="step">
                <p>Name</p>
                <div class="bullet"><span>1</span></div>
                <div class="check fas fa-check"></div>
            </div>
            <div class="step">
                <p>Contact</p>
                <div class="bullet"><span>2</span></div>
                <div class="check fas fa-check"></div>
            </div>
            <div class="step">
                <p>Birth</p>
                <div class="bullet"><span>3</span></div>
                <div class="check fas fa-check"></div>
            </div>
            <div class="step">
                <p>Body</p>
                <div class="bullet"><span>4</span></div>
                <div class="check fas fa-check"></div>
            </div>
            <div class="step">
                <p>Submit</p>
                <div class="bullet"><span>5</span></div>
                <div class="check fas fa-check"></div>
            </div>
        </div>
        <div class="form-outer">
            <form id="signupForm" action="./login" onsubmit="return validateForm()" method="post">
                <div class="validation-message" id="validationMessage"></div>
                <div class="page slide-page">
                    <div class="title">Basic Info:</div>
                    <div class="field">
                        <div class="label">First Name</div>
                        <input type="text" id="fname" required name="Firstname">
                    </div>
                    <div class="field">
                        <div class="label">Last Name</div>
                        <input type="text" id="lname" required name="Lastname">
                    </div>
                    <div class="field">
                        <button class="firstNext next" onclick="return validateForm()">Next</button>
                    </div>
                </div>
                <div class="page">
                    <div class="title">Contact Info:</div>
                    <div class="field">
                        <div class="label">Email Address</div>
                        <input type="email" id="email" required name="Email">
                    </div>
                    <div class="field">
                        <div class="label">Phone Number</div>
                        <input type="tel" id="number" pattern="[\+]?[\d\s\-()]{8,}" required name="phone">
                    </div>
                    <div class="field btns">
                        <button class="prev-1 prev">Previous</button>
                        <button class="next-1 next" onclick="return validateForm()">Next</button>
                    </div>
                </div>
                <div class="page">
                    <div class="title">Date of Birth:</div>
                    <div class="field">
                        <div class="label">Age</div>
                        <input type="number" id="age" required name="age">
                    </div>
                    <div class="field">
                        <div class="label">Gender</div>
                        <select id="gender" required name="Gender">
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                    </div>
                    <div class="field btns">
                        <button class="prev-2 prev">Previous</button>
                        <button class="next-2 next" onclick="return validateForm()">Next</button>
                    </div>
                </div>
                <div class="page">
                    <div class="title">Body Details:</div>
                    <div class="field">
                        <div class="label">Weight</div>
                        <input type="number" id="weight" required name="Weight">
                    </div>
                    <div class="field">
                        <div class="label">Height</div>
                        <input type="number" id="height" required name="Height">
                    </div>
                    <div class="field btns">
                        <button class="prev-3 prev">Previous</button>
                        <button class="next-3 next" onclick="return validateForm()">Next</button>
                    </div>
                </div>
                <div class="page">
                    <div class="title">Login Details:</div>
                    <div class="field">
                        <div class="label">Username</div>
                        <input type="text" id="username" required name="Username">
                    </div>
                    <div class="field">
                        <div class="label">Password</div>
                        <input type="password" id="password" required name="Password">
                    </div>
                    <div class="field btns">
                        <button class="prev-4 prev">Previous</button>
                        <button class="submit" onclick="return validateForm()">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script src="js/signup.js"></script>
</body>
</html>