           <button id="submitBtn" onclick="displayFeedbackModal()">Submit</button>
           <div id="feedbackSubmitButton" style="display: none;">
            <button onclick="changeRatingButton()">Change rating</button>
    </div>
    </div>
    
    </div>
   
  </div>

    <!--modal-->
    <div id="saveChanges-modal" class="modal">
        <div class="modal-content">
          <span class="close">&times;</span>
          <p>Changes saved successfully!</p>
          <button id="closeModalBtn">Close</button>
        </div>
      </div>

      <!--feedback modal-->
      <div id="feedbackModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
