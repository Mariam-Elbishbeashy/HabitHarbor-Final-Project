                <button id="editHealthInfoButton" onclick="editHealthInfo()" style="display: none;">Edit Health Info</button>
            </div> 
    </div>
    
    <!--social links-->
 <div id="socialLinksContent" class="content">
    <div class="user-profile">
        <div class="social-links">
            <i class="fa-brands fa-facebook"></i>
            <input type="text" id="facebookLink" placeholder="Enter your facebook link">
