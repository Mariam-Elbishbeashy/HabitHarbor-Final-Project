            <!-- BMI Content -->
            <div id="bmiContent" class="content" style="display: none;">
                <div class="user-profile">
                    <div class="heightWeight">
                        <label for="height">Height (cm):</label>
                        <input type="text" id="heightCm" value="<%= user.Height%>" readonly>
                    </div>
                    <div class="heightWeight">
                        <label for="weight">Weight (kg):</label>
                        <input type="text" id="weightKg" value="<%= user.Weight%>" readonly>
                    </div>
                    <div class="user-profile">
                        <div class="heightWeight">
                            <label for="height">Height (ft):</label>
                            <% if (arr.length > 0) { %>
                                <% const heightCm = user.Height; %>
                                <% const heightFt = (heightCm * 0.0328084).toFixed(1); %>
                                <input type="text" id="heightFt" value="<%= heightFt %>" readonly>
                            <% } else { %>
                                <input type="text" id="heightFt" value="" readonly>
                            <% } %>
                        </div>
                        <div class="heightWeight">
                            <label for="weight">Weight (lbs):</label>
                            <% if (arr.length > 0) { %>
                                <% const weightKg = user.Weight; %>
                                <% const weightLbs = (weightKg * 2.20462).toFixed(2); %>
                                <input type="text" id="weightLbs" value="<%= weightLbs %> lbs" readonly>
                            <% } else { %>
                                <input type="text" id="weightLbs" value="" readonly>
                            <% } %>
                        </div>
                    </div>
                </div>
                <section class="output">
                    <h3>Your BMI is</h3>
                    <p id="bmi">0</p>
                    <p id="desc">N/A</p>
                </section>
                <section class="bmi-scale">
                    <div style="--color:var(--underweight)">
                        <h4>UnderWeight</h4>
                        <p>&lt; 18.5</p>
                    </div>
                    <div style="--color:var(--normal)">
                        <h4>Normal</h4>
                        <p>18.5-25</p>
                    </div>
                    <div style="--color:var(--overweight)">
                        <h4>OverWeight</h4>
                        <p>25-30</p>
                    </div>

                    <div style="--color:var(--obese)">
                        <h4>Obese</h4>
                        <p>≥ 30</p>
                    </div>

                </section>
             </div>
            

             
