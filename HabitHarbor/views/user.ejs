                    <input type="checkbox" id="showCurrentPassword" class="checkbox-custom">
                    <label for="showCurrentPassword" class="checkbox-label">Show Password</label>
                </div>
                <div class="error" id="currentPasswordError"></div>
            </div>
        </div>
        <div class="password-section">
            <label for="newPassword">New Password:</label>
            <div class="password-container">
                <input type="password" id="newPassword" name="newPassword">
                <div class="password-checkbox-container">
                    <input type="checkbox" id="showNewPassword" class="checkbox-custom">
                    <label for="showNewPassword" class="checkbox-label">Show Password</label>
                </div>
                <div class="error" id="newPasswordError"></div> 
            </div>
        </div>
        <div class="password-section">
            <label for="confirmPassword">Confirm Password:</label>
            <div class="password-container">
                <input type="password" id="confirmPassword" name="confirmPassword">
                <div class="password-checkbox-container">
                    <input type="checkbox" id="showConfirmPassword" class="checkbox-custom">
                    <label for="showConfirmPassword" class="checkbox-label">Show Password</label>
                </div>
                <div class="error" id="confirmPasswordError"></div> 
            </div>
        </div>
        <button onclick="changePassword()">Save Changes</button>
    </div>
</div>

    
