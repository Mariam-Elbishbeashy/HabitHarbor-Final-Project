    <div class="badges-title">
        <h2 id="badge-title">Badges</h2>
    </div>
    <div class="badges">
        <% badges.forEach(function(badge) { %>
            <button class="badge" onClick="return modalForm(this);">
                <h5 class="badge-title"><%- badge.badgeTitle %></h5>
                <img src="<%- badge.badgeImage %>" alt="<%- badge.badgeCategory %> badge" class="img-badge"/>
            </button>
        <% }); %>
